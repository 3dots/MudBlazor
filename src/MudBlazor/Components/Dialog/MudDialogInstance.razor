@namespace MudBlazor
@inherits MudComponentBase

<div @attributes="UserAttributes" id="@_elementId" class="mud-dialog-container @Position">
    <MudOverlay Visible="true" OnClick="HandleBackgroundClickAsync" Class="@BackgroundClassname" DarkBackground="true" />
    <div id="_@Id.ToString("N")" class="@Classname" style="@Style" role="dialog" aria-modal="true" aria-labelledby="@AriaLabelledById">
        @if (!NoHeader)
        {
            <div class="mud-dialog-title">
                @if (TitleContent == null)
                {
                    <MudText Typo="Typo.h6" id="@AriaLabelledById">@Title</MudText>
                }
                else
                {
                    @TitleContent
                }
                @if (CloseButton)
                {
                    <MudIconButton aria-label="close" Icon="@CloseIcon" @onclick="Cancel" class="mud-button-close"/>
                }
            </div>
         }
        <CascadingValue Value="this" IsFixed="true">
            @Content
        </CascadingValue>
    </div>
</div>
